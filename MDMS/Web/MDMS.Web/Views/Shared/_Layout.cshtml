<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MDMS </title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/jquery.datetimepicker.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.datetimepicker.full.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
<div class="container-fluid">
    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded">
                <a class="navbar-brand font-weight-bold" href="/">MDMS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <div class="dropdown show">
                                <a class="nav-link font-weight-bold active dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Vehicle</a>
                                <div class="dropdown-menu"
                                     aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="/Administration/Vehicle/Provider/Create">Create Provider</a>
                                    <a class="dropdown-item" href="/Administration/Vehicle/Type/Create">Create Type</a>
                                    <a class="dropdown-item" href="/Administration/Vehicle/Create">Create</a>
                                    <a class="dropdown-item" href="/Vehicle/All">All</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item active">
                            <div class="dropdown show">
                                <a class="nav-link font-weight-bold active dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Part</a>
                                <div class="dropdown-menu"
                                     aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="/Administration/Part/Provider/Create">Create Provider</a>
                                    <a class="dropdown-item" href="/Administration/Part/Create">Create</a>
                                    <a class="dropdown-item" href="/Part/All">All</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item active">
                            <div class="dropdown show">
                                <a class="nav-link font-weight-bold active dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Repair</a>
                                <div class="dropdown-menu"
                                     aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="/Administration/Repair/Provider/Create">Create Provider</a>
                                    <a class="dropdown-item" href="/Repair/All">All</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Administration/Repair/ExternalActive">Your Active Repairs</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Administration/User/All">Users</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Identity/Account/Profile">@User.Identity.Name</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Identity/Account/Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
    }
    else if (this.User.Identity.IsAuthenticated && this.User.IsInRole("User"))
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded">
                <a class="navbar-brand font-weight-bold" href="/">MDMS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Vehicle/All">Vehicles</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Part/All">Parts</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Repair/All">Repairs</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Repair/InternalActive">Your Active Repair</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Identity/Account/Profile">@User.Identity.Name</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Identity/Account/Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
    }
    else if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Root"))
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded">
                <a class="navbar-brand font-weight-bold" href="/">MDMS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Identity/Account/Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
    }
    else if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Guest"))
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded">
                <a class="navbar-brand font-weight-bold" href="/">MDMS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Identity/Account/Profile">@User.Identity.Name</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Identity/Account/Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
    }
    else
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary rounded">
                <a class="navbar-brand font-weight-bold" href="/">MDMS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/">Home</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Identity/Account/Login">Login</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link font-weight-bold" href="/Identity/Account/Register">Register</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
    }
    <main class="mt-3 mb-3">
        @RenderBody()
    </main>
    <footer>
        <div class="container-fluid bg-primary">
            <div class="text-white p-3 text-center font-weight-bold">
                &copy; SoftUni C# Web July 2019 class.
            </div>
        </div>
    </footer>
</div>
@RenderSection("Scripts", required: false)
</body>
</html>

