@model MDMS.Web.BindingModels.Part.Create.PartCreateBindingModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="bg-primary text-white font-weight-bold text-center p-3 w-30 mx-auto rounded">Create Part Provider</h1>
<form method="post" action="/Administration/Part/Create" class="form border-primary-4 rounded p-3 w-30 mx-auto mt-3 bg-white">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (this.ViewData["error"] != null)
    {
        <ul>
            <li class="text-danger">@this.ViewData["error"]</li>
        </ul>
    }
    <div class="form-group mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Name" class="text-primary h5">Name</label>
        </div>
        <input type="text" class="form-control text-primary text-center" id="name" placeholder="Name..."
               asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Price" class="text-primary h5">Price</label>
        </div>
        <input type="number"
               step="0.01"
               class="form-control text-primary text-center"
               id="price"
               placeholder="Price..."
               asp-for="Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Stock" class="text-primary h5">Stock</label>
        </div>
        <input type="number"
               step="1"
               class="form-control text-primary text-center"
               id="stock"
               placeholder="Stock..."
               asp-for="Stock">
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-group mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="AcquiredFrom" class="text-primary h5">Part Provider</label>
        </div>
        <select class="form-control text-primary text-center" id="partsProvider" asp-for="AcquiredFrom">
            <option selected disabled>--- Select Part Provider ---</option>
            <vc:part-provider></vc:part-provider>
        </select>
        <span asp-validation-for="AcquiredFrom" class="text-danger"></span>
    </div>
    <hr class="hr-2 bg-primary mt-4">
    <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-primary font-weight-bold">Create Part</button>
    </div>
   
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

